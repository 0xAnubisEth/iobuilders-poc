<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.roman.wallet.accounts.domain.Account" table="users">
        <composite-id name="id" class="com.roman.wallet.accounts.domain.AccountUserId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="userId" class="com.roman.wallet.accounts.domain.AccountUserId" access="field">
            <property name="value" column="userId" type="string" access="field"/>
        </component>

        <component name="balance" class="com.roman.wallet.accounts.domain.AccountBalance" access="field">
            <property name="value" column="balance" type="float" access="field"/>
        </component>
    </class>
</hibernate-mapping>