<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.roman.wallet.users.domain.WalletUser" table="users">
        <id name="id" column="id" length="36" access="field"/>
        <property name="username" column="username" type="string" access="field"/>
        <property name="name" column="name" type="string" access="field"/>
        <property name="lastname" column="name" type="string" access="field"/>
    </class>
</hibernate-mapping>